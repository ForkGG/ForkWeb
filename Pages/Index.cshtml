@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<div class="text-center">
    @*Icon*@
    <div class="container logo-fork" id="Home">
        <div class="container row justify-content-center align-content-center">
            <img class="col-xl-4 d-none d-xl-block" src="~/img/Forky.svg"/>
            <div class="col-xl-8 col-12 d-inline-block align-middle">
                <span class="d-inline-block align-middle h-100"></span>
                <div class="d-inline-block align-middle">
                    <img src="~/img/Title.svg" class="align-middle"/>
                    <p>Minecraft Server Manager GUI</p>
                </div>
            </div>
        </div>
        @*Links*@
        <div>
            <button type="button" class="btn btn-primary d-none d-md-inline">
                <span>
                    <p class="d-inline-block">Download</p>
                    <i class="fa fa-download ml-2"></i>
                </span>
            </button>
            <div class="row justify-content-center mt-3">
                <button type="button" class="btn btn-secondary m-2 col-8 col-md-4" style="max-width: 210px" onclick="openInNewTab('https://discord.fork.gg')">
                    Discord
                    <i class="fab fa-discord ml-2"></i>
                </button>
                <button type="button" class="btn btn-secondary m-2 col-8 col-md-4" style="max-width: 210px" onclick="openInNewTab('https://www.patreon.com/forkgg')">
                    Patreon
                    <i class="fab fa-patreon ml-2"></i>
                </button>
            </div>
        </div>
    </div>

    @*Screenshots*@
    @*<h1>SCREENSHOTS</h1>*@
    <div class="row justify-content-center">
        <div class="carousel-outer col-lg-7 col-10 d-flex justify-content-center align-content-center">
            <div class="carousel-bgr"></div>
            <div id="screenshotCarousel" class="carousel slide text-center" data-ride="carousel">
                <ol class="carousel-indicators">
                    @foreach (var screenshot in Model.Screenshots)
                    {
                        int i = Model.Screenshots.IndexOf(screenshot);
                        <li data-target="#screenshotCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @foreach (var screenshot in Model.Screenshots)
                    {
                        int i = Model.Screenshots.IndexOf(screenshot);
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@screenshot.Path" alt="@screenshot.Name"/>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#screenshotCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#screenshotCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-2 col-sm-8 col-10">
            <div id="screenshotDescriptions" class="text-sm-left carousel-description">
                @foreach (var screenshot in Model.Screenshots)
                {
                    int i = Model.Screenshots.IndexOf(screenshot);
                    <div class="@(i == 0 ? "" : "d-none")">
                        <h2>@screenshot.Name</h2>
                        <p>@Html.Raw(screenshot.Description.Replace("\n","<br>"))</p>
                    </div>
                }
            </div>
        </div>
    </div>

    @*Features*@
    <div id="Features" class="mt-5">
        <h1>FEATURES</h1>
        <div class="row align-content-center justify-content-center mt-5">
            @foreach (var feature in Model.Features)
            {
                <div class="col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4 row mr-4 ml-4 mb-4">
                    <div class="col-8 text-right">
                        <h2>@feature.Title</h2>
                        <p>@Html.Raw(feature.Description)</p>
                    </div>
                    <div class="col-4 col-xl-3 d-flex flex-wrap align-items-center">
                        <img src="@feature.IconPath"/>
                    </div>
                </div>
                
            }
        </div>
    </div>
</div>
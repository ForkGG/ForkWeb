@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<div class="text-center" >
    @*Icon*@
    <div class="container" id="Home">
        <div class="container row justify-content-center align-content-center logo-fork">
            <img class="col-xl-4 d-none d-xl-block" src="~/img/TitleIcon.png" />
            <div class="col-xl-8 col-12 d-inline-block align-middle">
                <span class="d-inline-block align-middle h-100"></span>
                <div class="d-inline-block align-middle">
                    <img src="~/img/TitleText.png" class="align-middle" />
                    <p>A Minecraft Server Manager Tool</p>
                </div>
            </div>
        </div>
    </div>
    
    @*Carousel*@
    <div id="screenshotCarousel" class="container carousel slide text-center mb-5" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var screenshot in Model.Screenshots)
            {
                int i = Model.Screenshots.IndexOf(screenshot);
                <li data-target="#screenshotCarousel" data-slide-to="@i" class="@(i==0 ? "active" : "")"></li>
            }
        </ol>
        <div class="carousel-inner shadow-lg" style="border-radius: 1.5rem;">
            @foreach (var screenshot in Model.Screenshots)
            {
                int i = Model.Screenshots.IndexOf(screenshot);
                string name = screenshot.Name;
                <div class="carousel-item @(i==0 ? "active" : "")">
                    <img class="d-block w-100" src="@screenshot.Path" alt="@name" />
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#screenshotCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#screenshotCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div style=" height: 200px;" class="stripe">

    </div>
    @*Features*@
    <div id="Features" style="margin-top: 10rem;" class="container">
        <h2><b>Fork</b> offers a ton of useful features for your convenience</h2>
        <div class="container-sm">
            <div class="d-flex flex-wrap">
                <div class=" bg-dark-fork rounded-feature m-4">
                    <div class="rounded-circle bg-light-fork icon-feature mx-auto m-2 mt-3">
                        <img />
                    </div>
                    <h3 class="mb-4"><b>Free</b></h3>
                    <p class="m-2">
                        Forever.
                        <br />no need for license,
                        <br />no need for any stupid subscriptions,
                        <br />it's Free Real Estate
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>
